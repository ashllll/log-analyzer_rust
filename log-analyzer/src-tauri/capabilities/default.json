{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default", 
    "dialog:allow-open", 
    "dialog:allow-save",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/unrar",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}
